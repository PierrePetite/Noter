# ==============================================
# Noter Backend - Production Configuration
# ==============================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Domain/URL (REQUIRED in production)
CORS_ORIGIN=https://noter.yourdomain.com
UPLOAD_BASE_URL=https://noter.yourdomain.com/uploads

# Database (PostgreSQL recommended for production)
DATABASE_URL="postgresql://noter_user:YOUR_PASSWORD@localhost:5432/noter"

# Alternative: SQLite (not recommended for production)
# DATABASE_URL="file:/opt/noter/backend/prisma/noter.db"

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=/opt/noter/backend/uploads
MAX_FILE_SIZE=52428800

# Backup Configuration
BACKUP_DIR=/opt/noter/backend/backups
BACKUP_ENABLED=false

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# Storage Provider (default: local)
STORAGE_PROVIDER=local

# Backup Provider (default: local)
BACKUP_PROVIDER=local

# Google Drive Integration (optional)
# GDRIVE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GDRIVE_CLIENT_SECRET=your-client-secret
# GDRIVE_REDIRECT_URI=https://noter.yourdomain.com/api/gdrive/callback
# GDRIVE_ENABLED=false

# Application Version
APP_VERSION=1.0.0
